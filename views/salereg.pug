                    br
                    .label-flex
                      label(for="status") Marital status
                    .form-radio-group
                      .form-radio-item
                        input#single(type="radio" name="status")
                        label(for="single") Single
                        span.check
                      .form-radio-item
                        input#married(type="radio" name="status")
                        label(for="married") Married
                        span.check
                  .form-group
                    .form-input
                      label.required(for="spid") Sales Person ID
                      input#spid(type="text" name="nin")
                    br
                   
                    label.required(for="companyrole") Company Role
                    .select-list
                      select(name="companyrole")
                        option#rsupervisor(value="supervisor") Supervisor
                        option#rnone(value="none") None
                    br
                    .form-input
                      label.required(for="wdays") working days
                      input#wdays(type="text" name="wdays")
                    br
                    .form-input
                      label.required(for="current") Current Date
                      input#current(type="date" name="current")
                    br
                    .form-radio
                      .label-flex
                        label(for="role") Role
                      .form-radio-group
                        .form-radio-item
                          input#admin(type="radio" name="role" value="admin")
                          label(for="admin") Administrator
                          span.check
                        .form-radio-item
                          input#sales(type="radio" name="role" value="sales")
                          label(for="sales") Sales Executive
                          span.check
                hr
                .form-submit
                  input#submit.submit(type="submit" value="Submit" name="submit" onclick="validate()")
                  input#cancel.submit(type="reset" value="Cancel" name="reset" onclick="reset();")
