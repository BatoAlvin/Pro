doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Sales registration form
    link(rel="stylesheet" href="../public/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet" href="salesreg.css")
  body(onload="document.salesr.first_name.focus();")
    .navbar
      a(href="#home") Home
      a(href="#news") View Details
      .dropdown
        button.dropbtn
          | Register
          i.fa.fa-caret-down
        .dropdown-content
          a(href="./customerdet.html" target="_blank") Customer
          a(href="./addname" target="_blank") Sales Executive
    h1(style="color:#4d81f1;")
      center  SALES PERSON REGISTRATION FORM 2020
    .container
      .row
        .col-md-12
          .signup-content
            .signup-form
              form(method="POST" name="register" action="/register" onsubmit="validate();")
                .form-row
                  .form-group
                    .form-input
                      label.required(for="first_name") Names
                      input#first_name(type="text" name="username")
                    .form-input
                      label.required(for="last_name") Password
                      input#last_name(type="password" name="password")
                  
                    .form-input
                      label(for="email") Email
                      input#email(type="email" name="email")
                    .form-input
                      label.required(for="phone_number") Phone number
                      input#phone_number(type="text" name="phonenumber")
                    br
                    .form-input
                      label.required(for="Birthday_day") Date of birth
                      select#Birthday_Day(name="Birthday_day")
