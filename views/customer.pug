doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Customer registration form
    link(rel="stylesheet" href="../public/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet" href="customerdet.css")
  body(onload="document.customerreg.customerid.focus();")
    .navbar
      a(href="#home") Home
      a(href="#news") View Details
      .dropdown
        button.dropbtn
          | Register
          i.fa.fa-caret-down
        .dropdown-content
          a(href="./registercustomer") Customer
          a(href="./register") Sales Executive
    h1(style="color:#4d81f1;")
      center  CUSTOMER REGISTRATION FORM 2020
    .container
      .row
        .col-md-12
          .signup-content
            .signup-form
              form(method="POST" name="customerreg" action="/registercustomer" onsubmit="validate();")
                .form-row
                  .form-group
                    .photo
                      label.required(for="photo") Attach Photo
                      |                                     â€‹
                      input#photo(type="file" name="photo")
                    br
                    br
                    .form-input
                      label.required(for="customerid") Customer ID
                      input#customerid(type="text" name="customerid")
                    br
                    .form-input
                      label.required(for="currentdate") Current Date
                      input#currentdate(type="date" name="currentdate")
                  .form-group
                    .form-input
                      label.required(for="first_name") First name
                      input#first_name(type="text" name="first_name")
                    .form-input
                      label.required(for="last_name") Last name
                      input#last_name(type="text" name="last_name")
                    .form-input
                      label.required(for="email") Email
                      input#email(type="text" name="email")
                    .form-input
                      label.required(for="phone_number") Phone number
                      input#phone_number(type="text" name="phone_number")
                    .form-input
                      label.required(for="nin") National ID
                      input#nin(type="text" name="nin")
                    .form-input
                      label.required(for="nationality") Nationality
                      input#nationality(type="text" name="nationality")
                  .form-group
                    .form-input
                      label.required(for="Birthday_day") Date of birth
                      select#Birthday_Day(name="Birthday_day")
                        option(value="-1") Day:
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="4") 4
                        option(value="5") 5
                        option(value="6") 6
